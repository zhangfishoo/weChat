/* pages/card/card.wxss */

.card-nav{
  height: 100rpx;
  background:#fff;
  display: flex;
  align-items: center;
}
.card-li{
  width: 150rpx;
  height: 80rpx;
  margin-left:15rpx;
  border-top-right-radius:50rpx; 
  border-bottom-left-radius:50rpx;
  border: 1rpx solid pink;
  font-size: 28rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.card-box{
  height: 280rpx;
  background: #fff;
  margin-top: 6rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.card-img{
  width: 540rpx;
  height: 240rpx;
  border-top-right-radius:150rpx; 
  border-bottom-left-radius:150rpx;

}
/*活动页*/
.s-activity-list{
  height: 200rpx;
  display:flex;
  flex: 1;
  /* border:1rpx solid red; */
  justify-content: flex-start;
  align-items: center;
  margin-top: 2rpx;
  background: #fff;
}
.s-activity-imgbox{
  width: 180rpx;
  height: 140rpx;
  margin-left: 20rpx;
}
.s-activity-img{
  width: 100%;
  height: 100%;
}
.s-activity-word{
  height: 140rpx;
  margin-left: 20rpx;
  font-weight: normal;
  display: flex;
  flex-direction: column;
  
  justify-content: space-between;
  
}
.s-activity-title1{
  color: #000;
}
.s-activity-title2{
width: 310rpx;
height: 40rpx;
color: #999;
font-size: 28rpx;
display: flex;
justify-content: space-between;

}